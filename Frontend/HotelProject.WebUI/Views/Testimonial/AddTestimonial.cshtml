@model AddTestimonialViewModel
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-action="AddTestimonial" method="post">
    <label>Referans Görsel</label>
    <input type="text" asp-for="Image" class="form-control" />
    <br />
    <label>Referans Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br /> 
    <label>Referans Ünvanı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    
    <button class="btn btn-primary">Referans Ekle</button>
</form>